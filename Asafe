num = int(input("digite um numero: "))
if num ==0:
 print ("neutro")
elif num % 2 == 0:
 print ("par")
else:
  print ("impar")

if num >=1:
  print ("positivo")
elif num <=1:
 print ("negativo")
else:
  print ("negativo")
num= int(input("digite um numero: "))
if num ==0:
 print ("neutro")
elif num % 2 == 0:
 print ("par")
else:
  print ("impar")

if num >=1:
  print ("positivo")
elif num <0:
  print ("negativo")
